<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.quickhire.quickhire.ApplyActivity"
    tools:showIn="@layout/activity_apply">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="83dp"
        android:layout_height="19dp"
        android:layout_marginEnd="312dp"
        android:layout_marginStart="16dp"
        android:text="Description"
        android:textColor="@color/from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applyCompanyText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="67dp"
        android:layout_height="19dp"
        android:layout_marginEnd="328dp"
        android:layout_marginStart="16dp"
        android:text="Company"
        android:textColor="@color/from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applyJobTitleText" />

    <TextView
        android:id="@+id/applyDescriptionText"
        android:layout_width="367dp"
        android:layout_height="215dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="16dp"
        android:text="Description"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/applyJobTitleText"
        android:layout_width="367dp"
        android:layout_height="44dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Job Title"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/applyCompanyText"
        android:layout_width="367dp"
        android:layout_height="44dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="16dp"
        android:text="Company"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/applicationQuestionButton"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="87dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="1dp"
        android:text="Questions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applyDescriptionText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="67dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:text="Job Title"
        android:textColor="@color/from"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="138dp"
        android:layout_marginStart="137dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
