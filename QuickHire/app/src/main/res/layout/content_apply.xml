<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.quickhire.quickhire.ApplyActivity"
    tools:showIn="@layout/activity_apply">

    <TextView
        android:id="@+id/applyDescriptionText"
        android:layout_width="367dp"
        android:layout_height="243dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:text="Description"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applyCompanyText" />

    <TextView
        android:id="@+id/applyJobTitleText"
        android:layout_width="367dp"
        android:layout_height="44dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="3dp"
        android:text="Job Title"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/applyCompanyText"
        android:layout_width="367dp"
        android:layout_height="44dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:text="Company"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applyJobTitleText" />

    <Button
        android:id="@+id/applicationQuestionButton"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="22dp"
        android:text="Questions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
